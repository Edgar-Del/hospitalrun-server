# Configurações do Servidor
PORT=3000
IP=localhost
NODE_ENV=development

# Configurações de Autenticação
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Configurações de Criptografia
ENCRYPTION_KEY=your-super-secret-encryption-key-32-chars-long
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-32-chars-long

# Configurações de Segurança
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
BACKUP_FREQUENCY=daily
BACKUP_RETENTION=30_days
BACKUP_ENCRYPTION=true
BACKUP_COMPRESSION=true
BACKUP_DIR=./backups
MAX_BACKUPS=100

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Configurações de Monitoramento
MONITORING_ENABLED=true
ALERT_CPU_THRESHOLD=90
ALERT_MEMORY_THRESHOLD=90
ALERT_ERROR_RATE_THRESHOLD=10

# Configurações de Auditoria
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=90
AUDIT_LOG_LEVEL=info

# Configurações de Banco de Dados (CouchDB)
COUCHDB_URL=http://localhost:5984
COUCHDB_USERNAME=dev
COUCHDB_PASSWORD=dev
COUCHDB_DATABASE=hospitalrun

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configurações de SSL/TLS (Produção)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Configurações de Backup
BACKUP_SCHEDULE_ENABLED=true
BACKUP_NOTIFICATION_EMAIL=

# Configurações de Compliance
HIPAA_COMPLIANCE_ENABLED=true
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555

# Configurações de Performance
CACHE_ENABLED=true
CACHE_TTL=3600
COMPRESSION_ENABLED=true

# Configurações de Notificações
EMAIL_ENABLED=false
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=

# Configurações de API
API_VERSION=v1
API_RATE_LIMIT_ENABLED=true
API_DOCUMENTATION_ENABLED=true 